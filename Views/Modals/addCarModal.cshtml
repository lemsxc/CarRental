<div x-show="addCarModal" x-cloak class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-3xl w-full relative z-50" x-on:click.away="addCarModal = false">
        <button x-on:click="addCarModal = false" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">
            &times;
        </button>
        <form method="post" asp-action="Add" asp-controller="Car" enctype="multipart/form-data" class="space-y-4">
            <!-- Header Section -->
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-semibold text-teal-950">Add Car</h1>
                </div>

            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="text-sm font-semibold">Brand</label>
                    <input type="text" name="Brand" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Model</label>
                    <input type="text" name="Model" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Category</label>
                    <select name="Category" class="w-full p-2 border rounded-lg" required>
                        <option>SUV</option>
                        <option>Sedan</option>
                        <option>Sport</option>
                    </select>
                </div>
                <div>
                    <label class="text-sm font-semibold">Seats</label>
                    <input type="number" name="Seats" x-model="selectedEditCars.seats"
                           class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Transmission</label>
                    <select name="Transmission" class="w-full p-2 border rounded-lg" required>
                        <option>Manual</option>
                        <option>Automatic</option>
                    </select>
                </div>
                <div>
                    <label class="text-sm font-semibold">Fuel Type</label>
                    <select name="FuelType" class="w-full p-2 border rounded-lg" required>
                        <option>Gasoline</option>
                        <option>Diesel</option>
                    </select>
                </div>
                <div>
                    <label class="text-sm font-semibold">Fuel Level</label>
                    <input type="number" name="FuelLevel" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Plate Number</label>
                    <input type="text" name="PlateNumber" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Mileage</label>
                    <input type="number" name="Mileage" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Rent Price</label>
                    <input type="number" step="0.01" name="RentPrice" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Condition</label>
                    <select name="Condition" class="w-full p-2 border rounded-lg">
                        <option>New</option>
                        <option>Used</option>
                        <option>Refurbished</option>
                    </select>
                </div>
                <div>
                    <label class="text-sm font-semibold">Status</label>
                    <select name="Status" class="w-full p-2 border rounded-lg">
                        <option>Available</option>
                        <option>Unavailable</option>
                    </select>
                </div>
            </div>
            <div class="flex flex-col mt-8 max-md:max-w-full">
                <h2 class="text-2xl font-semibold text-teal-950">Vehicle Image</h2>
                <div class="flex items-center gap-4 text-xs text-teal-950 mt-5">
                    <!-- Upload Section -->
                    <div
                        class="flex flex-col items-center p-6 bg-white rounded-lg border border-dashed border-slate-300 w-56 h-40">
                        <input type="file" name="Image" id="Image" class="hidden" accept="image/*" multiple
                            onchange="previewImage(event)">
                        <label for="Image" class="items-center cursor-pointer text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto" width="32" height="32"
                                fill="#000000" viewBox="0 0 256 256">
                                <path
                                    d="M208,56H180.28L166.65,35.56A8,8,0,0,0,160,32H96a8,8,0,0,0-6.65,3.56L75.71,56H48A24,24,0,0,0,24,80V192a24,24,0,0,0,24,24H208a24,24,0,0,0,24-24V80A24,24,0,0,0,208,56Zm8,136a8,8,0,0,1-8,8H48a8,8,0,0,1-8-8V80a8,8,0,0,1,8-8H80a8,8,0,0,0,6.66-3.56L100.28,48h55.43l13.63,20.44A8,8,0,0,0,176,72h32a8,8,0,0,1,8,8ZM128,88a44,44,0,1,0,44,44A44.05,44.05,0,0,0,128,88Zm0,72a28,28,0,1,1,28-28A28,28,0,0,1,128,160Z">
                                </path>
                            </svg>
                            <div class="flex flex-col items-center mt-4">
                                <span>Upload Or Paste Image</span>
                                <span class="mt-1.5 font-semibold">jpg/jpeg/png</span>
                            </div>
                        </label>
                    </div>

                    <!-- Image Preview -->
                    <div id="imagePreviewContainer"
                        class="flex items-center justify-center w-full sm:w-1/3 h-40 border border-dashed rounded-lg overflow-hidden">
                        <img id="imagePreview" class="w-full h-full object-cover" />
                    </div>
                </div>
            </div>
            <!-- Submit Button -->
            <div>
                <button type="submit"
                    class="px-6 py-3 text-white bg-teal-700 rounded-lg hover:bg-teal-600 transition duration-300">
                    Save Vehicle
                </button>
            </div>
        </form>
    </div>
</div>
