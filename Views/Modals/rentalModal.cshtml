<!-- Car Rental Details Modal -->
<div x-data="{ open: false }">
    <!-- Trigger Button -->
    <button x-on:click="open = true" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
        View Rental Details
    </button>

    <!-- Modal Overlay -->
    <div x-show="open" class="fixed inset-0 bg-black bg-opacity-50 z-40" x-cloak x-on:click.self="open = false"></div>

    <!-- Modal Content -->
    <div x-show="open" class="fixed inset-0 flex items-center justify-center z-50 p-4" x-cloak>
        <div class="bg-white rounded-2xl shadow-lg max-w-2xl w-full overflow-hidden">
            <!-- Modal Header -->
            <div class="flex justify-between items-center px-6 py-4 border-b">
                <h2 class="text-xl font-semibold text-gray-800">Car Rental Details</h2>
                <button x-on:click="open = false" class="text-gray-500 hover:text-gray-700">
                    &times;
                </button>
            </div>

            <!-- Modal Body -->
            <div class="px-6 py-4 space-y-4 text-sm text-gray-700">
                <div>
                    <span class="font-medium text-gray-900">Customer Name:</span> John Doe
                </div>
                <div>
                    <span class="font-medium text-gray-900">Car:</span> Toyota Corolla 2022 (Automatic)
                </div>
                <div>
                    <span class="font-medium text-gray-900">Pickup Location:</span> Downtown Branch
                </div>
                <div>
                    <span class="font-medium text-gray-900">Drop-off Location:</span> Airport Terminal 3
                </div>
                <div>
                    <span class="font-medium text-gray-900">Rental Duration:</span> April 20, 2025 â€“ April 25, 2025 (5
                    days)
                </div>
                <div>
                    <span class="font-medium text-gray-900">Total Price:</span> $275.00
                </div>
                <div>
                    <span class="font-medium text-gray-900">Payment Status:</span>
                    <span class="inline-block px-2 py-1 bg-green-100 text-green-700 rounded text-xs">Paid</span>
                </div>
                <div>
                    <span class="font-medium text-gray-900">Extras:</span> GPS, Child Seat
                </div>
                <div>
                    <span class="font-medium text-gray-900">Rental Status:</span>
                    <span class="inline-block px-2 py-1 bg-yellow-100 text-yellow-700 rounded text-xs">Upcoming</span>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="px-6 py-4 border-t flex justify-end space-x-3">
                <button x-on:click="open = false" class="px-4 py-2 rounded bg-gray-200 hover:bg-gray-300 text-gray-800">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
