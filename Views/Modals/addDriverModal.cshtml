<div x-show="addDriverModal" x-cloak class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-3xl w-full relative z-50" x-on:click.away="addDriverModal = false">
        <button x-on:click="addDriverModal = false" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">
            &times;
        </button>
        <form method="post" asp-action="AddDriver" asp-controller="Driver" class="space-y-4">
            <!-- Header Section -->
            <div class="flex justify-between items-center mb-5">
                <div>
                    <h1 class="text-3xl font-semibold text-teal-950">Add Driver</h1>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-5">
                <div>
                    <label class="text-sm font-semibold">First Name</label>
                    <input type="text" name="FirstName" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Last Name</label>
                    <input type="text" name="LastName" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">License Number</label>
                    <input type="text" name="LicenseNumber" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">License Expiry Date</label>
                    <input type="date" name="LicenseExpiry" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Contact Number</label>
                    <input type="text" name="ContactNumber" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Email</label>
                    <input type="email" name="Email" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Address</label>
                    <input type="text" name="Address" class="w-full p-2 border rounded-lg" required>
                </div>
                <div>
                    <label class="text-sm font-semibold">Status</label>
                    <select name="Status" class="w-full p-2 border rounded-lg">
                        <option value="Available">Available</option>
                        <option value="Hired">Hired</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit"
                    class="px-6 py-3 text-white bg-teal-700 rounded-lg hover:bg-teal-600 transition duration-300">
                    Save Driver
                </button>
            </div>
        </form>
    </div>
</div>