@model IEnumerable<CarRental.Models.Car>
@{
    ViewData["Title"] = "Home";
    var returnUrl = ViewBag.ReturnUrl as string;
}
<div x-data="{ carModal: false, rentModal: false, showAll: false, selectedCar: {}, carDetails: [], }"
    class="flex flex-col items-center bg-white">
    <div class="flex overflow-hidden flex-col w-full bg-white max-w-[1440px] max-md:p-5">
        <partial name="~/Views/Home/_User-nav.cshtml"></partial>
        <div
            class="flex relative items-center p-20 mx-20 my-0 bg-indigo-600 min-h-[660px] rounded-[40px] max-md:px-5 max-md:py-10 max-md:m-0 max-md:flex-col">
            <!-- Left Side Text -->
            <div class="text-black max-w-[686px]">
                <h1 class="mb-7 text-6xl font-bold text-white max-md:text-4xl">
                    Experience the Road Like Never Before
                </h1>
                <p class="mb-8 text-base text-white">
                    At UrbanDrive, we understand that every journey matters. Our extensive fleet of vehicles is designed
                    to cater to all your travel needs, whether for business or leisure. With a commitment to customer
                    satisfaction, we offer seamless booking, flexible rental options, and 24/7 customer support. Get
                    ready to explore the open road with confidence!
                </p>
                <a href="#cars" class="px-7 py-3 font-semibold text-black bg-amber-500 rounded-xl">
                    View All Cars
                </a>
            </div>

            <!-- Right Side Car Carousel -->
            <div class="w-[50%] h-[300px] ml-auto max-md:w-full max-md:mt-10">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        <!-- Slide 1 -->
                        <div class="swiper-slide">
                            <img src="~/Images/bmw.jpg" alt="Car 1" class="w-full h-full object-cover rounded-lg">
                        </div>
                        <!-- Slide 2 -->
                        <div class="swiper-slide">
                            <img src="~/Images/supra.jpg" alt="Car 2" class="w-full h-full object-cover rounded-lg">
                        </div>
                        <!-- Slide 3 -->
                        <div class="swiper-slide">
                            <img src="~/Images/gallardo.jpg" alt="Car 3" class="w-full h-full object-cover rounded-lg">
                        </div>
                    </div>
                    <!-- Pagination & Navigation -->
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-next text-white"></div>
                    <div class="swiper-button-prev text-white"></div>
                </div>
            </div>
        </div>

        <div
            class="flex justify-between px-20 py-16 text-center max-md:flex-col max-md:gap-10 max-md:items-center max-md:px-5 max-md:py-10">
            <div class="w-[357px]">
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/6cdc6760df2e7bc0317b9562a226b18ce207292fe7868a681f09f7074622a23f?apiKey=9171519205d6418989323d6f5fe10db6&"
                    alt="Availability" class="mx-auto mt-0 mb-5 w-16 h-16" />
                <h3 class="mb-7 text-2xl font-semibold">Availability</h3>
                <p class="text-base leading-6 text-black">With UrbanDrive, you can rest assured that our fleet is always
                    ready for you. We offer a wide selection of vehicles available at your convenience, ensuring you can
                    rent a car whenever and wherever you need it.</p>
            </div>
            <div class="w-[357px]">
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/471f5382ffc4c1c2d1fb6051d6d9ecde3855a570f4fedb9e4a9232b6ba2d4e90?apiKey=9171519205d6418989323d6f5fe10db6&"
                    alt="Comfort" class="mx-auto mt-0 mb-5 w-16 h-16" />
                <h3 class="mb-7 text-2xl font-semibold">Comfort</h3>
                <p class="text-base leading-6 text-black">Our cars are meticulously maintained to provide you with a
                    comfortable driving experience. Enjoy modern features and spacious interiors, making every drive
                    enjoyable, whether you're on a business trip or a family vacation.</p>
            </div>
            <div class="w-[357px]">
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/fabf387ee563e77621a59feaebb21e96aeb666d17458dc58fb9dee129328065e?apiKey=9171519205d6418989323d6f5fe10db6&"
                    alt="Savings" class="mx-auto mt-0 mb-5 w-16 h-16" />
                <h3 class="mb-7 text-2xl font-semibold">Savings</h3>
                <p class="text-base leading-6 text-black">We believe in transparency and value. UrbanDrive offers
                    competitive pricing with no hidden fees, ensuring you get the most out of your rental experience.
                    Choose from a variety of plans that fit your budget.</p>
            </div>
        </div>
        <div class="flex gap-10 py-16 pr-40 pl-20 max-md:flex-col max-md:gap-10 max-md:px-5 max-md:py-10">

            <div class="flex-1">
                <div class="border border-indigo-700 rounded-lg p-5 bg-indigo-600 mb-5 h-64">
                    <div class="flex items-start mb-7">
                        <span
                            class="mr-4 w-10 h-10 text-base text-black bg-white rounded-full flex items-center justify-center">1</span>
                        <div>
                            <h3 class="text-xl font-semibold text-white">Flexible Rent Options</h3>
                            <p class="mt-5 text-base leading-normal text-white">Choose from a variety of rental options.
                                Whether you need a car for a day, a week, or longer, we have plans that fit your needs.
                                This is the best Flexible Rent Options. All you have to do is to choose and click!</p>
                        </div>
                    </div>
                </div>

                <div class="border border-indigo-700 rounded-lg p-5 bg-indigo-600 h-64">
                    <div class="flex items-start mb-7">
                        <span
                            class="mr-4 w-10 h-10 text-base text-black bg-white rounded-full flex items-center justify-center">2</span>
                        <div>
                            <h3 class="text-xl font-semibold text-white">24/7 Customer Support</h3>
                            <p class="mt-5 text-base leading-normal text-white">Our dedicated team is here to assist you
                                at any time. From booking to returning your vehicle, we ensure a smooth experience.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex-1">
                <div class="border border-indigo-700 rounded-lg p-5 bg-indigo-600 mb-5 h-64">
                    <div class="flex items-start mb-7">
                        <span
                            class="mr-4 w-10 h-10 text-base text-black bg-white rounded-full flex items-center justify-center">3</span>
                        <div>
                            <h3 class="text-xl font-semibold text-white">Wide Selection of Vehicles</h3>
                            <p class="mt-5 text-base leading-normal text-white">From compact cars to SUVs, we have a
                                vehicle for every occasion. Explore our diverse fleet and choose the perfect ride for
                                your adventure.</p>
                        </div>
                    </div>
                </div>

                <div class="border border-indigo-700 rounded-lg p-5 bg-indigo-600 h-64">
                    <div class="flex items-start mb-7">
                        <span
                            class="mr-4 w-10 h-10 text-base text-black bg-white rounded-full flex items-center justify-center">4</span>
                        <div>
                            <h3 class="text-xl font-semibold text-white">Easy Booking Process</h3>
                            <p class="mt-5 text-base leading-normal text-white">Booking your rental is quick and easy.
                                Use our online platform to check availability, compare prices, and secure your vehicle
                                in just a few clicks.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="px-20 py-16 max-md:px-5 max-md:py-10">
            <div class="flex justify-between items-end mb-10">
                <h2 class="text-5xl font-bold leading-tight">
                    <span>Choose the car that</span>
                    <br />
                    <span>suits you</span>
                </h2>
                <a href="#" class="flex gap-2 items-center text-xl font-bold">
                    <span>View All</span>
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/eb74af6c9042e77ae06e20bc25fb2de3f76456a005182cc85e7aac22a06086b6?apiKey=9171519205d6418989323d6f5fe10db6&"
                        alt="Arrow" />
                </a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Loop through the first 9 cars -->
                @foreach (var cars in Model)
                {
                    <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200">
                        <!-- Car Image -->
                        <div class="rounded-lg flex justify-center h-48 w-full items-center">
                            <img src="@Url.Content("~/" + cars.Image)" class="rounded-lg object-contain w-full h-full" alt="Car Image">
                        </div>

                        <!-- Title & Price -->
                        <div class="flex justify-between items-center mt-10">
                            <h2 class="text-lg font-bold text-gray-900"> @cars.Brand </h2>
                            <p class="text-purple-600 font-bold text-lg">
                                $@cars.RentPrice<span class="text-gray-500 text-sm"> /day</span>
                            </p>
                        </div>

                        <!-- Category -->
                        <p class="text-gray-500 text-left text-sm">@cars.Category</p>

                        <!-- Features -->
                        <div class="flex items-center space-x-5 mt-3 text-gray-700">
                            <div class="flex items-center space-x-1">
                                <span class="text-lg">⚙️</span>
                                <span class="text-sm">@cars.Transmission</span>
                            </div>
                            <div class="flex items-center space-x-1">
                                <span class="text-lg">⛽</span>
                                <span class="text-sm">@cars.FuelType</span>
                            </div>
                            <div class="flex items-center space-x-1">
                                <span class="text-lg">❄️</span>
                                <span class="text-sm">Air Conditioner</span>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <button class="mt-4 w-full bg-purple-600 text-white py-2 rounded-lg text-sm font-medium"
                                x-on:click="carModal = true; selectedCar = {
                                    image: '@Url.Content("~/" + cars.Image)',
                                    brand: '@cars.Brand',
                                    model: '@cars.Model',
                                    transmission: '@cars.Transmission',
                                    fuel_type: '@cars.FuelType',
                                    fuel_level: '@cars.FuelLevel',
                                    price: '@cars.RentPrice',
                                    category: '@cars.Category',
                                    plateNum: '@cars.PlateNumber',
                                    mileage: '@cars.Mileage',
                                    condition: '@cars.Condition'
                                }">
                                View Details
                            </button>
                            <button class="mt-4 w-full bg-purple-600 text-white py-2 rounded-lg text-sm font-medium"
                                x-on:click.prevent="rentModal = true; carDetails = {
                                    id: '@cars.CarId', 
                                    image: '@Url.Content("~/" + cars.Image)',
                                    brand: '@cars.Brand',
                                    model: '@cars.Model',
                                    transmission: '@cars.Transmission',
                                    fuel_type: '@cars.FuelType',
                                    mileage: '@cars.Mileage',
                                    rent_price: '@cars.RentPrice'
                                }">
                                Rent Car
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="p-16 my-16 text-center bg-indigo-600 rounded-3xl w-full max-md:px-5 max-md:py-10">
                <h2 class="mb-5 text-5xl font-bold text-black">Facts in numbers</h2>
                <p class="mb-20 text-base text-black">Join thousands of satisfied customers who have trusted UrbanDrive
                    for their car rental needs. Our commitment to quality and service sets us apart in the industry.</p>
                <div
                    class="grid gap-16 justify-center grid-cols-[repeat(4,240px)] max-md:gap-5 max-md:grid-cols-[1fr_1fr]">
                    <div class="flex gap-4 items-center p-4 bg-white rounded-3xl">
                        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/1791f6d31b6dceb58a8007a6d7db56a7dac5c56ebe55fead99dd7cda2f8133ac?apiKey=9171519205d6418989323d6f5fe10db6&"
                            alt="Cars" class="rounded-xl h-[72px] w-[72px]" />
                        <div>
                            <p class="text-2xl font-bold text-black">540+</p>
                            <p class="mt-2 text-base font-semibold text-black">cars</p>
                        </div>
                    </div>
                    <div class="flex gap-4 items-center p-4 bg-white rounded-3xl">
                        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/f12bcba3e33ad49b6fb0d3e20e6d2e29e801b0de52e61344d01fec6808a030da?apiKey=9171519205d6418989323d6f5fe10db6&"
                            alt="Customers" class="rounded-xl h-[72px] w-[72px]" />
                        <div>
                            <p class="text-2xl font-bold text-black">20k+</p>
                            <p class="mt-2 text-base font-semibold text-black">customers</p>
                        </div>
                    </div>
                    <div class="flex gap-4 items-center p-4 bg-white rounded-3xl">
                        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/e27125a637361f39df3a9013a39a5fe988913c8e6a61ba87d615566076d35083?apiKey=9171519205d6418989323d6f5fe10db6&"
                            alt="Years" class="rounded-xl h-[72px] w-[72px]" />
                        <div>
                            <p class="text-2xl font-bold text-black">25+</p>
                            <p class="mt-2 text-base font-semibold text-black">Years</p>
                        </div>
                    </div>
                    <div class="flex gap-4 items-center p-4 bg-white rounded-3xl">
                        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/50ec0e51566e56e8824b5f0632f491f4f907ae419d2c7f9a948a64e86ef14ad7?apiKey=9171519205d6418989323d6f5fe10db6&"
                            alt="Miles" class="rounded-xl h-[72px] w-[72px]" />
                        <div>
                            <p class="text-2xl font-bold text-black">20m+</p>
                            <p class="mt-2 text-base font-semibold text-black">Miles</p>
                        </div>
                    </div>
                </div>
            </div>

            <div
                class="flex relative items-center px-20 py-14 mx-20 my-16 bg-indigo-600 rounded-3xl max-md:flex-col max-md:px-5 max-md:py-10 max-md:mx-5 max-md:my-10">
                <div class="max-w-[756px]">
                    <h2 class="mb-5 text-5xl font-bold text-black">Enjoy every mile with reliable transportation.</h2>
                    <p class="mb-9 text-base text-black">At UrbanDrive, we are dedicated to providing you with an
                        exceptional rental experience. From easy booking to friendly customer service, we ensure that
                        every detail is taken care of so you can focus on your journey.</p>
                    <form class="flex gap-5 px-6 py-2.5 bg-white rounded-3xl max-w-[464px]">
                        <label for="citySearch" class="sr-only">Search for a city</label>
                        <input type="text" id="citySearch" placeholder="City" class="flex-1 text-base font-semibold" />
                        <button type="submit" class="px-7 py-3 font-semibold text-black bg-amber-500 rounded-xl">
                            Search
                        </button>
                    </form>
                </div>
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/acb670a1fbfb2b4ef32384adacd1cca7a677adb567c430b8ed67cc0abdab3924?apiKey=9171519205d6418989323d6f5fe10db6&"
                    alt="Car" class="absolute bottom-[7px] h-[380px] right-[74px] w-[380px] max-md:hidden" />
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Modals/carModal.cshtml")
    @await Html.PartialAsync("~/Views/Modals/rentModal.cshtml")

    <script>
        var swiper = new Swiper(".mySwiper", {
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    </script>
</div>