@{
    ViewData["Title"] = "Welcome to SpeedRent - Your Ultimate Car Rental Service";
}

<div class="bg-gradient-to-r from-green-200 to-blue-200 min-h-screen">
    <!-- Hero Section -->
    <div class="container mx-auto px-6 py-16 text-center">
        <h1 class="text-5xl font-extrabold leading-tight">
            Drive Your Dream Car Today
        </h1>
        <p class="mt-4 text-lg text-gray-300">
            Rent top-quality vehicles at unbeatable prices, anytime, anywhere.
        </p>
        <a href="/Cars"
            class="mt-6 inline-block bg-yellow-500 text-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-yellow-600 transition">
            Browse Cars
        </a>
    </div>

    <!-- Featured Cars Section -->
    <div class="container mx-auto px-6 py-16">
        <h2 class="text-3xl font-bold text-center">Featured Cars</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
            <div class="bg-white text-black p-6 rounded-lg shadow-lg">
                <img src="/images/sportscar.jpg" class="w-full rounded-lg" alt="Sports Car">
                <h3 class="text-xl font-semibold mt-4">Luxury Sports Car</h3>
                <p class="text-gray-600 mt-2">Experience the thrill of speed and luxury.</p>
            </div>
            <div class="bg-white text-black p-6 rounded-lg shadow-lg">
                <img src="/images/suv.jpg" class="w-full rounded-lg" alt="SUV">
                <h3 class="text-xl font-semibold mt-4">Spacious SUV</h3>
                <p class="text-gray-600 mt-2">Perfect for family trips and off-road adventures.</p>
            </div>
            <div class="bg-white text-black p-6 rounded-lg shadow-lg">
                <img src="/images/electric.jpg" class="w-full rounded-lg" alt="Electric Car">
                <h3 class="text-xl font-semibold mt-4">Eco-Friendly Electric</h3>
                <p class="text-gray-600 mt-2">Go green with zero emissions and maximum efficiency.</p>
            </div>
        </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="container mx-auto px-6 py-16 text-black">
        <h2 class="text-3xl font-bold text-center">Why Choose UrbanDrive?</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
            <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2554/2554965.png" class="mx-auto w-16" alt="24/7 Service">
                <h3 class="text-xl font-semibold mt-4">24/7 Availability</h3>
                <p class="mt-2 text-gray-600">Book and drive anytime, with round-the-clock service.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2620/2620262.png" class="mx-auto w-16" alt="Affordable">
                <h3 class="text-xl font-semibold mt-4">Affordable Pricing</h3>
                <p class="mt-2 text-gray-600">Competitive rates with no hidden fees.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2383/2383584.png" class="mx-auto w-16" alt="Customer Support">
                <h3 class="text-xl font-semibold mt-4">Top-Notch Support</h3>
                <p class="mt-2 text-gray-600">Our team is ready to assist you at any time.</p>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="container mx-auto px-6 py-16">
        <h2 class="text-3xl font-bold text-center">What Our Customers Say</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
            <div class="bg-gray-300 p-6 rounded-lg shadow-lg">
                <p class="text-lg">"Amazing service and well-maintained cars. Highly recommend!"</p>
                <h4 class="mt-4 font-semibold">- Alex D.</h4>
            </div>
            <div class="bg-gray-300 p-6 rounded-lg shadow-lg">
                <p class="text-lg">"Best rental experience ever! Smooth booking process."</p>
                <h4 class="mt-4 font-semibold">- Sarah K.</h4>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 py-6 text-center">
        <p>© 2025 SpeedRent. All Rights Reserved.</p>
        <div class="mt-2">
            <a href="#" class="text-blue-400 hover:underline mx-2">Privacy Policy</a>
            <a href="#" class="text-blue-400 hover:underline mx-2">Terms of Service</a>
        </div>
    </footer>
</div>
