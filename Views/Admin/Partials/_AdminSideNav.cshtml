<style>
    .nav-button {
        transition: transform 0.3s ease, opacity 0.3s ease, background-color 0.3s ease;
    }

    /* Active State Styles */
    .nav-button.active {
        transform: scale(1.1);
        /* Scale up */
        opacity: 0.8;
        /* Fade slightly */
        background-color: #4f46e5;
        /* Indigo-600 */
        color: white;
        /* Text color to white */
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Check if there's an active button in localStorage
        const activeButtonId = localStorage.getItem('activeButtonId');
        if (activeButtonId) {
            const activeButton = document.getElementById(activeButtonId);
            if (activeButton) {
                activeButton.classList.add('active');
            }
        }

        // Add click event listeners to all nav buttons
        document.querySelectorAll('.nav-button').forEach(button => {
            button.addEventListener('click', function () {
                // Remove active class from all buttons
                document.querySelectorAll('.nav-button').forEach(btn => btn.classList.remove('active'));

                // Add active class to the clicked button
                this.classList.add('active');

                // Store the clicked button's ID in localStorage
                localStorage.setItem('activeButtonId', this.id);
            });
        });
    });

</script>
