                        <button class="self-stretch py-1.5 pr-2 pl-2.5 my-auto w-6 rounded-sm border border-indigo-600 border-solid min-h-6">5</button>
                        <button class="self-stretch px-2 py-1.5 my-auto w-6 rounded-sm border border-indigo-600 border-solid min-h-6">6</button>
                    </nav>
                </section>
            </div>
        </div>
