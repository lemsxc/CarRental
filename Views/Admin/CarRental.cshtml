@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Admin/Partials/_AdminSideNav.cshtml"></partial>

<div class="min-h-screen flex flex-col bg-slate-300 ms-[260px]">
    <partial name="~/Views/Admin/Partials/_AdminTopNav.cshtml"></partial>
    <div class="w-full">
        <div class="mt-8 w-full">
            <div class="flex flex-col ml-5 w-4/5 max-md:ml-0 max-md:w-full">
                <!-- Header Section -->
                <header class="flex flex-wrap items-end mr-7 max-md:mr-2.5 max-md:max-w-full">
                    <!-- Title and Subtitle -->
                    <div class="flex flex-col justify-center">
                        <h1 class="text-3xl font-bold text-neutral-950">CAR RENTALS</h1>
                        <h2 class="mt-1.5 text-base text-black">TRANSACTIONS</h2>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap gap-2.5 items-start text-sm min-w-60 text-neutral-950 max-md:max-w-full ml-auto">
                        <div class="flex gap-2.5 items-center px-5 bg-white rounded-lg min-h-10 min-w-60 w-[260px]">
                            <img src="search-icon-url" class="object-contain shrink-0 self-stretch my-auto w-5 aspect-square" alt="Search icon" />
                            <span class="self-stretch my-auto"> Type to search... </span>
                        </div>

                        <button class="flex gap-2 items-center px-4 py-2.5 whitespace-nowrap bg-white rounded-lg">
                            <img src="filter-icon-url" class="object-contain shrink-0 self-stretch my-auto w-5 aspect-square" alt="Filter icon" />
                            <span class="self-stretch my-auto">Filter</span>
                        </button>

                        <button class="flex gap-2 items-center px-4 py-2.5 whitespace-nowrap bg-white rounded-lg">
                            <img src="columns-icon-url" class="object-contain shrink-0 self-stretch my-auto w-5 aspect-square" alt="Columns icon" />
                            <span class="self-stretch my-auto">Columns</span>
                        </button>

                        <button class="flex gap-2 justify-center items-center py-2.5 pr-6 pl-5 text-white bg-indigo-600 rounded-lg min-h-10 max-md:pr-5">
                            <img src="create-icon-url" class="object-contain shrink-0 self-stretch my-auto w-5 aspect-square" alt="Create icon" />
                            <span class="self-stretch my-auto"> Create New </span>
                        </button>
                    </div>
                </header>

                <!-- Transactions Table -->
                <section class="flex flex-col justify-center pb-5 mt-10 w-full text-sm bg-white rounded-lg text-neutral-950 max-md:max-w-full">
                    <table class="min-w-full divide-y divide-gray-200">
                        <!-- Table Header -->
                        <thead>
                            <tr class="bg-slate-200 border-b border-slate-300">
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Trip_ID</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Vehicle Type</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Vehicle Number</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Trip Date</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Trip Time</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Destination</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-sm font-bold uppercase tracking-wider">Action</th>
                            </tr>
                        </thead>

                        <!-- Table Rows -->
                        <tbody>
                            <tr class="border-b border-slate-300">
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">#SZ15E0010</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Car</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">FC 323 MT</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">28-12-2023</td>
                                <td class="px-8 py-4 text-center">4:45pm</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Al-Salhiyah</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Confirm</td>
                                <td class="px-8 py-4 text-center">
                                    <button class="text-xs font-medium text-white bg-indigo-600 rounded-sm min-h-[21px] w-[50px]">View</button>
                                </td>
                            </tr>
                            <tr class="border-b border-slate-300">
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">#SZ15E0010</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Car</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">BP 909 NC</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">6-4-2023</td>
                                <td class="px-8 py-4 text-center">5:19pm</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Salah Al-Din</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Confirm</td>
                                <td class="px-8 py-4 text-center">
                                    <button class="text-xs font-medium text-white bg-indigo-600 rounded-sm min-h-[21px] w-[50px]">View</button>
                                </td>
                            </tr>
                            <tr class="border-b border-slate-300">
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">#SZ15E0153</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Microbus</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">N/A</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">21-3-2023</td>
                                <td class="px-8 py-4 text-center">7:55am</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Al-Rimal</td>
                                <td class="px-6 py-3 text-left text-sm uppercase tracking-wider">Pending</td>
                                <td class="px-8 py-4 text-center">
                                    <button class="text-xs font-medium text-white bg-indigo-600 rounded-sm min-h-[21px] w-[50px]">View</button>
                                </td>
                            </tr>
                            <!-- More rows go here -->
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <nav class="flex gap-2 items-center self-start px-8 pt-5 pb-2.5 text-xs text-indigo-600 whitespace-nowrap max-md:px-5" aria-label="Pagination">
                        <button class="self-stretch pr-2.5 pl-2.5 my-auto w-6 h-6 text-white bg-indigo-600 rounded-sm min-h-6" aria-current="page">1</button>
                        <button class="self-stretch py-1.5 pr-2 pl-2.5 my-auto w-6 rounded-sm border border-indigo-600 border-solid min-h-6">2</button>
