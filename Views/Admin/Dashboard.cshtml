@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="flex overflow-hidden flex-col bg-[#D0CAEA]">
    <partial name="~/Views/Admin/Partials/_AdminTopNav.cshtml"></partial>
    <div class="z-10 -mt-4 w-full max-w-[1400px] max-md:max-w-full">
        <div class="flex gap-5 max-md:flex-col">
            <div class="flex flex-col w-1/5 max-md:ml-0 max-md:w-full">
                <partial name="~/Views/Admin/Partials/_AdminSideNav.cshtml"></partial>
            </div>
            <div class="mt-8 w-full">
                <div class="flex flex-col ml-5 w-4/5 max-md:ml-0 max-md:w-full">
                    <div class="flex flex-col mt-8 w-full max-md:mt-10 max-md:max-w-full">
                        <div class="container mx-auto p-6">
                            <h1 class="text-2xl font-bold text-gray-800">Dashboard</h1>

                            <!-- Summary Cards -->
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-4">
                                <div class="bg-blue-500 text-white p-6 rounded-lg shadow-md">
                                    <h2 class="text-lg font-semibold">Total Revenue</h2>
                                    <p class="text-2xl font-bold">$@ViewBag.TotalRevenue</p>
                                </div>

                                <div class="bg-green-500 text-white p-6 rounded-lg shadow-md">
                                    <h2 class="text-lg font-semibold">Total Bookings</h2>
                                    <p class="text-2xl font-bold">@ViewBag.TotalBookings</p>
                                </div>

                                <div class="bg-yellow-500 text-white p-6 rounded-lg shadow-md">
                                    <h2 class="text-lg font-semibold">Active Rentals</h2>
                                    <p class="text-2xl font-bold">@ViewBag.ActiveRentals</p>
                                </div>
                            </div>

                            <!-- Revenue Chart -->
                            <div class="mt-8 bg-white p-6 rounded-lg shadow-md">
                                <h2 class="text-xl font-semibold text-gray-800">Revenue Trends (Last 30 Days)</h2>
                                <canvas id="revenueChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>